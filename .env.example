# Canvas API Mode: 'true' = localStorage mock (for UI development), 'false' = real backend
NEXT_PUBLIC_USE_MOCK_API=true

# Backend API
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000
BACKEND_URL=http://localhost:8000

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production

# Auth0 Configuration (Primary Authentication)
NEXT_PUBLIC_AUTH0_ENABLED=true
AUTH0_CLIENT_ID=
AUTH0_CLIENT_SECRET=
AUTH0_ISSUER=https://your-tenant.auth0.com
AUTH0_AUDIENCE=https://api.merlin.local

# Optional: Google OAuth (via NextAuth)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Legacy: Clerk (deprecated - use Auth0 instead)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=